    <LinearLayout
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_above="@+id/keypad"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:padding="@dimen/layoutPadding">


        <TextView
            android:id="@+id/formula"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textViewHeight"
            android:fontFamily="@font/kanitlight"
            android:gravity="end|center"
            android:padding="@dimen/textPadding"
            android:scrollHorizontally="true"
            android:text="@string/formula"
            android:textColor="@color/black"
            android:textSize="@dimen/formulaTextSize"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textViewHeight"
            android:fontFamily="@font/kanitlight"
            android:gravity="end|center"
            android:padding="@dimen/textPadding"
            android:scrollHorizontally="true"

            android:text="@string/result"
            android:textColor="@color/black"
            android:textSize="@dimen/resultTextSize" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/keypad"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/keypadPadding"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btnHistory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:backgroundTint="#B57979"
                    android:background="@drawable/gradient"
                    android:fontFamily="@font/kanitlight"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:text="@string/history"
                    android:textColor="@color/white"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:textSize="@dimen/buttonTextSize"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights,TextContrastCheck" />

                <Button
                    android:id="@+id/btnScientific"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:fontFamily="@font/kanitlight"
                    android:text="@string/scientific"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    android:textStyle="bold"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/btnPercentage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:fontFamily="@font/kanitlight"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:text="@string/percentage"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/btnBackspace"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:textStyle="bold"
                    android:fontFamily="@font/kanitlight"
                    android:text="@string/backspace"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/keypadPadding"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/kanitlight"
                    android:textStyle="bold"
                    android:text="@string/c"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="NestedWeights,TextContrastCheck" />

                <Button
                    android:id="@+id/btnOpeningBracket"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/kanitlight"
                    android:text="@string/openingBracket"
                    android:textColor="@color/white"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:textSize="@dimen/buttonTextSize"
                    android:textStyle="bold"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/btnClosingBracket"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:fontFamily="@font/kanitlight"
                    android:textStyle="bold"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:text="@string/closingBracket"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/btnDivide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:fontFamily="@font/kanitlight"

                    android:textStyle="bold"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:text="@string/divide"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/keypadPadding"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnSeven"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:fontFamily="@font/kanitlight"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:text="@string/seven"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="NestedWeights,TextContrastCheck" />

                <Button
                    android:id="@+id/btnEight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/kanitlight"
                    android:textStyle="bold"
                    android:text="@string/eight"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize" />

                <Button
                    android:id="@+id/btnNine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:fontFamily="@font/kanitlight"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:text="@string/nine"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize" />

                <Button
                    android:id="@+id/btnMultiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:text="@string/multiply"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/keypadPadding"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnFour"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/kanitlight"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:textStyle="bold"
                    android:text="@string/four"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="NestedWeights,TextContrastCheck,VisualLintButtonSize" />

                <Button
                    android:id="@+id/btnFive"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/kanitlight"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:text="@string/five"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="TextContrastCheck,VisualLintButtonSize" />

                <Button
                    android:id="@+id/btnSix"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:textStyle="bold"
                    android:fontFamily="@font/kanitlight"
                    android:text="@string/six"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="TextContrastCheck,VisualLintButtonSize" />

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:fontFamily="@font/kanitlight"
                    android:text="@string/minus"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="VisualLintButtonSize,TextContrastCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/keypadPadding"
                android:layout_weight="1">


                <Button
                    android:id="@+id/btnOne"
                    android:background="@drawable/gradient"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:fontFamily="@font/kanitlight"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:text="@string/one"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="NestedWeights,TextContrastCheck,VisualLintButtonSize" />

                <Button
                    android:id="@+id/btnTwo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:fontFamily="@font/kanitlight"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:textStyle="bold"
                    android:text="@string/two"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="TextContrastCheck,VisualLintButtonSize" />

                <Button
                    android:id="@+id/btnThree"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:fontFamily="@font/kanitlight"
                    android:text="@string/three"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    android:textStyle="bold"
                    tools:ignore="TextContrastCheck,VisualLintButtonSize" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:text="@string/plus"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="TextContrastCheck,VisualLintButtonSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/keypadPadding"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnDoubleZero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:fontFamily="@font/kanitlight"
                    android:text="@string/doubleZero"
                    android:textColor="@color/white"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="NestedWeights,TextContrastCheck,VisualLintButtonSize" />

                <Button
                    android:id="@+id/btnZero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:fontFamily="@font/kanitlight"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:text="@string/zero"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize" />

                <Button
                    android:id="@+id/btnDot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@drawable/gradient"
                    android:fontFamily="@font/kanitlight"
                    android:layout_marginEnd="@dimen/buttonMarginEnd"
                    android:text="@string/dot"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="TextContrastCheck,VisualLintButtonSize" />

                <Button
                    android:id="@+id/btnEqual"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@drawable/gradient"
                    android:fontFamily="@font/kanitlight"
                    android:text="@string/equal"
                    tools:targetApi="o"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSize"
                    tools:ignore="TextContrastCheck,VisualLintButtonSize" />

            </LinearLayout>

<!--            <io.alterac.blurkit.BlurLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                app:blk_downscaleFactor="0.35"-->
<!--                app:blk_blurRadius="19"-->
<!--                app:blk_fps="0"/>-->
        </LinearLayout>
